<?xml version="1.0"?>
<launch>

  <arg name="robot_name" />
  <arg name="ee_name" />
  <arg name="sensor_name" />

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="rviz_tutorial" default="false" />
  <arg unless="$(arg rviz_tutorial)" name="command_args" value="-d $(find neo_moveit_config)/launch/moveit.rviz" />
  <arg     if="$(arg rviz_tutorial)" name="command_args" value="-d $(find neo_moveit_config)/launch/moveit_empty.rviz" />

  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
  args="$(arg command_args)" output="screen">
    <rosparam command="load" file="$(find neo_moveit_config)/config/$(arg robot_name)/kinematics.yaml"/>
  </node>

</launch>
